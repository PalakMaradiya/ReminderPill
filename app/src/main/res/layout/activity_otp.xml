<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".activity.OtpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/white_btn"
            android:backgroundTint="#80FFFFFF"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/baseline_arrow_back_24"
            app:tint="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/metropolis_bold"
            android:text="@string/OTP_Verification"
            android:textColor="@color/black"
            android:textSize="@dimen/_17ssp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/metropolis_regular"
            android:text="@string/Enter_the_OTP_your_received_to"
            android:textColor="#66000000"
            android:textSize="@dimen/_13ssp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_semibold"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/txtCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_semibold"
                android:hint="91"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />


            <TextView
                android:id="@+id/txtNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:hint="123456789"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />


        </LinearLayout>

        <com.chaos.view.PinView
            android:id="@+id/pinview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_40sdp"
            android:cursorVisible="true"
            android:fontFamily="@font/metropolis_bold"
            android:gravity="center"
            android:inputType="number"
            android:itemBackground="@color/white"
            android:textColor="@color/dark_sky"
            app:itemCount="4"
            app:itemHeight="@dimen/_64sdp"
            app:itemRadius="@dimen/_10sdp"
            app:itemSpacing="@dimen/_20sdp"
            app:itemWidth="@dimen/_45sdp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_regular"
                android:text="@string/If_you_didnt_receive_a_code"
                android:textColor="#66000000"
                android:textSize="@dimen/_10ssp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:fontFamily="@font/metropolis_semibold"
                android:text="@string/Resent"
                android:textColor="@color/dark_sky"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnVerify"
            android:layout_width="@dimen/_178sdp"
            android:layout_height="@dimen/_38sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_40sdp"
            android:background="@drawable/blue_btn"
            android:fontFamily="@font/metropolis_semibold"
            android:text="@string/Verify"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>